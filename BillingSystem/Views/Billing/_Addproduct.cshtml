@model BillingSystem.Models.AddProduct

@{
    ViewData["Title"] = "_Addproduct";
}
<hr\>
<h4>AddProduct</h4>
<div class="row">
<div class="col-md-4">

            <form asp-action="Insert">
     <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <table>
          <thead>
             <tr>
                <th>
                  <div class="form-group" required>
                         <select id="ProductName" name="ProductName" required class="form-control" style="width:400px;height:50px;padding: 10px;margin-bottom: 10px;border: 1px solid #ccc;border-radius: 4px;font-size: 16px;">
                               <option value='0'>Select Product</option>
                               <option value='1'>SRM</option>
                               <option value='2'>KRCT</option>
                               <option value='3'>MKCE</option>
                               <option value='4'>HICET</option>
                               <option value='5'>PSG</option>
                               <option value='6'>IIIT</option>
                               <option value='7'>MIT</option>
                            </select>
           <div id='result'></div>
             <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
        </th>

       <th>
         <div class="form-group">
                <input asp-for="Quantity" class="form-control" required placeholder="Enter Quantity" style="width:200px;height:50px; padding: 10px;margin-bottom: 10px;border: 1px solid #ccc;border-radius: 4px;font-size: 16px;" />
                     <span asp-validation-for="Quantity" class="text-danger"></span>
                   </div>
      </th>

      <th>
                                <input type="submit" value="Add" class="m-3" />
                            </form>
