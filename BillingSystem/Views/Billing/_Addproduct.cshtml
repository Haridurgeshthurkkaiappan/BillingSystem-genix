        <input type="submit" value="Add" class="m-3" style="width:80px;height:50px ;padding: 10px;margin-bottom: 10px;border: 1px solid #ccc;border-radius: 4px;font-size: 16px;" />
        </div>
      </th> *@

             </tr>
        </thead>
       </table>        
     </div>
</div>
